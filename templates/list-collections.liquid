<!-- /templates/list-collections.liquid -->
{% comment %}

  This page represents the /collections and /products pages.
  It is an optional, but highly recommended, template for your theme.

  More info:
    - http://docs.shopify.com/manual/configuration/store-customization/taking-control-of-collections-listing

{% endcomment %}



{% comment %}
  Loop through each collection, except 'frontpage'
{% endcomment %}
{% for link in linklists.all-collections.links %}
{% assign collection = link.object %}

  {% unless collection.handle == 'frontpage' %}

    {% capture collection_title %}{{ collection.title | escape }}{% endcapture %}
      {% capture collection_modulo %} {{ forloop.index | modulo:2 }}{% endcapture %}
      <div 
        class="collection {% if (collection_modulo) == 1 %}collectionLeft{% else %}collectionRight{% endif %} bannerImage-healthcare" 
        style="background: url('{{ collection.image | img_url: 'master'  }}') no-repeat center center;"
      >
        <div class="container ranges">
          {% if collection_modulo == 1 or forloop.index == 2 or forloop.index == 4 or forloop.index == 6 or forloop.index == 7  or forloop.index == 10   %}
            <div class="healthcare-left">
                <div class="healthcareTitle">
                    <h1 class="theTitle"><a href="{{ collection.url }}" title="View Healthcare range">{{ collection_title }}</a></h1>
                </div>
            </div>
            <div class="healthcare-mid">
                <div class="whiteBar"></div>
            </div>
            <div class="healthcare-right">
                <p>{{ collection.description | strip_html }}</p>
                <a href="{{ collection.url }}">See more on {{ collection_title }} Uniforms >></a>
            </div>
          {% else %}
            <div class="beauty-right mobileOnly">
                  <div class="beautyTitle">
                      <h1 class="theTitle"><a href="{{ collection.url }}" title="View Healthcare range">{{ collection_title }}</a></h1>
                  </div>
              </div>
              <div class="beauty-left">
                 <p>{{ collection.description | strip_html }}</p>
                 <a href="{{ collection.url }}"> See more on {{ collection_title }} Uniforms >></a>
              </div>
              <div class="beauty-mid">
                  <div class="whiteBar"></div>
              </div>
              
              <div class="beauty-right mobileOff">
                  <div class="beautyTitle">
                      <h1 class="theTitle"><a href="{{ collection.url }}" title="View Healthcare range">{{ collection_title }}</a></h1>
                  </div>
              </div>
          {% endif %}
           
        </div>
      </div>


   


  {% endunless %}

{% endfor %}
<div style="clear:both"></div>