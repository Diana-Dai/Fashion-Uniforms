                            alert(why);
                            return false;
                        }
                        if (submitcount61767 == 0) {
                            submitcount61767++;
                            theForm.submit();
                            return false;
                        } else {
                            alert("Form submission is in progress.");
                            return false;
                        }
                    }
                    //]]>
                </script>
            {% endform %}
        </div>
    </div>
</section>
