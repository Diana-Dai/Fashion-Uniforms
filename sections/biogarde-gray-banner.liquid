  .flex{
    display:block;
 	flex-direction:column;
	padding:35px 0;
  }

  .biogarde-home{
     height:auto;
     text-align:center;
   }
   .biogarde-home img{
      display:block
	  margin: 10px auto;
  }
  .biogarde-home .split{
      width:100%
  }

  .biogarde-home{
  	padding:75px 20px;
  }
  .biogarde-home span{
    display:block
  }
  .biogarde-home br{
