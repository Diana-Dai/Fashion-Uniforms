<div class="bannerImage-contact">
    <div class="logoWrap-inner-contact"><img alt="Contact" src="{{ 'contact-rectangle.png' | asset_url }}">
    </div>
</div>
<section class="contactFormWrap">
    <div class="container contactWords ">
        <h2>{{ page.title }}</h2>
        <div class="processDividerStrip"></div>
        <h3>
            {{ page.content }}
            
        </h3>
        <div class="theFormWrap">
                {% form 'contact', id: 'NewId' %}

                {% if form.posted_successfully? %}
                  <p class="note form-success">
                    {{ 'contact.form.post_success' | t }}
                  </p>
                {% endif %}

                {{ form.errors | default_errors }}


                <div class="formInnerWrap">
                    <input type="text" placeholder="First Name" maxlength="255" class="cat_textbox" id="FirstName" name="contact[first_name]" value="{% if contact[first_name] %}{{ contact[first_name] }}{% endif %}">
                    <input type="text" placeholder="Last Name" maxlength="255" class="cat_textbox" id="LastName" name="contact[last_name]" value="{% if contact[last_name] %}{{ contact[last_name] }}{% endif %}">
                    <input type="text" placeholder="Company/Organisation" class="cat_textbox" id="CAT_Custom_20000803" name="contact[company]" maxlength="4000" value="{% if contact[company] %}{{ contact[company] }}{% endif %}">
                    <input type="text" placeholder="Email" maxlength="255" class="cat_textbox" id="EmailAddress" name="contact[email]" value="{% if contact[email] %}{{ contact[email] }}{% endif %}">
                    <input type="text" placeholder="Location or Address" maxlength="255" class="cat_textbox" id="Location" name="contact[Location]" value="{% if contact[Location] %}{{ contact[Location] }}{% endif %}">
                  	<input type="text" placeholder="Phone" maxlength="255" class="cat_textbox" id="HomePhone" name="contact[HomePhone]" value="{% if contact[HomePhone] %}{{ contact[HomePhone] }}{% endif %}">
                    <input type="text" placeholder="Mobile" maxlength="255" class="cat_textbox" id="CellPhone" name="contact[CellPhone]" value="{% if contact[CellPhone] %}{{ contact[CellPhone] }}{% endif %}">
                    
                    <div class="preferredContact">
                        Preferred contact method
                        <div class="preferredInner">
                            <div class="preferredItem">
                                <input type="radio" value="Email" id="CAT_Custom_868_1" name="contact[contact_method]" {% if contact[contact_method] == 'Email' %}selected{% endif %}> Email
                            </div>
                            <div class="preferredItem">
                                <input type="radio" value="Phone" id="CAT_Custom_868_0" name="contact[contact_method]" {% if contact[contact_method] == 'Phone' %}selected{% endif %}> Phone
                            </div>
                        </div>
                    </div>
                    
                    <input type="text" placeholder="How many of your staff require uniforms?" maxlength="255" name="contact[staff_number]" id="CAT_Custom_20015805" class="cat_textbox" value="{% if contact[staff_number] %}{{ contact[staff_number] }}{% endif %}">
                    
                    <textarea placeholder="Your Message" onkeydown="if(this.value.length>=4000)this.value=this.value.substring(0,3999);" class="cat_listbox" rows="4" cols="10" id="CAT_Custom_869" name="contact[comments]">{% if contact[comments] %}{{ contact[comments] }}{% endif %}</textarea>
                    <div class="subscribeWrap">
                        <input type="checkbox" name="contact[subscribe_to_newsletter]"> Subscribe to e-newsletter
                    </div>
                    
                    
                    
                    <div class="no-robot">
                        

                    </div>
                    
                    <div style="display: none">
<input type="text" name="s_content" id="s_content" class="cat_textbox">
<input type="text" name="s_summary" id="s_summary" class="cat_textbox" value="c8f4ac4d337c40bebf95b2eeb3693758">
</div>

                    
                    
                    <input type="submit" id="catwebformbutton" value="Submit" class="cat_button">
                </div>
                <script type="text/javascript" src="https://fashion-uniforms.businesscatalyst.com/CatalystScripts/ValidationFunctions.js?vs=b1702.r463035-phase1"></script>
                <script type="text/javascript">
                    //<![CDATA[
                    var submitcount61767 = 0;
                    
                    function checkWholeForm61767(theForm) {
                        var why = "";
                        if (theForm.CellPhone) why += isEmpty(theForm.CellPhone.value, "Cell Phone Number");
                        if (theForm.HomePhone) why += isEmpty(theForm.HomePhone.value, "Home Phone Number");
                        if (theForm.EmailAddress) why += checkEmail(theForm.EmailAddress.value);
                      	if (theForm.Location) why += isEmpty(theForm.Location.value, "Location");
                        if (theForm.FirstName) why += isEmpty(theForm.FirstName.value, "First Name");
                        if (theForm.LastName) why += isEmpty(theForm.LastName.value, "Last Name");
                        if (theForm['g-recaptcha-response']) why += reCaptchaV2IsInvalid(theForm, "Please prove you're not a robot");
