{% stylesheet %}
  .flex{
	display:flex;
	align-items:center;
	justify-content:center;
  }
  .flex.end{
      justify-content:flex-end;
  }
  .biogarde-home {
    height:170px;
	background:#f4f5f7;
	text-transform: uppercase;
	font-size:15px;
    letter-spacing: 2px;
    font-family:"Montserrat", sans-serif;
  }
  .biogarde-home{
	text-align:center;
  }
  .biogarde-home a:hover{
      text-decoration:none;
  }
